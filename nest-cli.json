{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": ["@nestjs/swagger"],
    "watchAssets": true,
    "deleteOutDir": true,
    "webpack": false,
    "assets": [
      "/public",
      {
        "include": "assets",
        "watchAssets": true
      }
    ]
  }
}
